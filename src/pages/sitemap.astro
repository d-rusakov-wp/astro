---
import Layout from '@layouts/root/root'
import Container from '@components/Container/Container'
import Title from '@ui/Title/Title'
import { Icon } from 'astro-icon/components'
import { PAGES } from '@shared/const/'
import Greeting from 'src/components/Greeting/Greeting'
---

<Layout title="Список страниц">
  <main>
    <div class="sitemap">
      <Container mod="big">
        <div class="sitemap__logo">
          <Icon name="logo" />
        </div>
        <Title text="Список страниц" size="sm" />

        <Greeting name="default" messages={['Hi', 'Hello', 'Howdy', 'Hey there']} />
        <Greeting name="load" client:load messages={['Hi', 'Hello', 'Howdy', 'Hey there']} />
        <Greeting name="visible" client:visible messages={['Hi', 'Hello', 'Howdy', 'Hey there']} />

        <ol>
          {
            PAGES.map((item) => (
              <li>
                <a href={item.href}>{item.name}</a>
              </li>
            ))
          }
        </ol>
      </Container>
    </div>
  </main>
</Layout>

<style lang="scss">
  .sitemap {
    width: 100%;
    height: 100%;
    min-height: 100vh;
    padding-top: 30px;

    background-color: var(--color-lavender);

    &__logo {
      margin-bottom: 30px;

      width: 100%;
      max-width: 300px;
      height: 80px;

      img {
        object-fit: contain;
        width: auto;
        height: 100%;
      }
    }

    ol {
      margin-top: 20px;
      padding-left: 20px;
      list-style: decimal;

      li {
        &:not(:last-child) {
          margin-bottom: 16px;
        }

        a {
          font-size: 18px;
          color: var(--color-fedora);
        }
      }
    }
  }
</style>
